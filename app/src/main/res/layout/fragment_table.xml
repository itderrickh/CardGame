<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tableFragment"
    tools:context="com.itderrickh.cardgame.fragments.TableFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/tablebackground" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/scoreboard">
        <TextView
            android:layout_height="wrap_content"
            android:text="You"
            android:textColor="@color/colorWhite"
            android:id="@+id/playerName1"
            android:layout_row="0"
            android:layout_column="1" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Player 2"
            android:textColor="@color/colorWhite"
            android:id="@+id/playerName2"
            android:layout_row="0"
            android:layout_column="2" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Player 3"
            android:textColor="@color/colorWhite"
            android:id="@+id/playerName3"
            android:layout_row="0"
            android:layout_column="3" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Player 4"
            android:textColor="@color/colorWhite"
            android:id="@+id/playerName4"
            android:layout_row="0"
            android:layout_column="4" />
        <TextView
            android:layout_height="wrap_content"
            android:text="Player 5"
            android:textColor="@color/colorWhite"
            android:id="@+id/playerName5"
            android:layout_row="0"
            android:layout_column="5" />

        <TextView
            android:layout_height="wrap_content"
            android:text="Bid"
            android:textColor="@color/colorWhite"
            android:id="@+id/biddingText"
            android:paddingRight="5dp"
            android:layout_row="1"
            android:layout_column="0">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/bid1"
            android:layout_row="1"
            android:layout_column="1" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/bid2"
            android:layout_row="1"
            android:layout_column="2" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/bid3"
            android:layout_row="1"
            android:layout_column="3" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/bid4"
            android:layout_row="1"
            android:layout_column="4" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/bid5"
            android:layout_row="1"
            android:layout_column="5" />

        <TextView
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/colorWhite"
            android:id="@+id/TotalText"
            android:paddingRight="5dp"
            android:layout_row="2"
            android:layout_column="0">
        </TextView>
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/total1"
            android:layout_row="2"
            android:layout_column="1" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/total2"
            android:layout_row="2"
            android:layout_column="2" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/total3"
            android:layout_row="2"
            android:layout_column="3" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/total4"
            android:layout_row="2"
            android:layout_column="4" />
        <TextView
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:id="@+id/total5"
            android:layout_row="2"
            android:layout_column="5" />
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trumpArea"
        android:layout_above="@+id/playingArea"
        android:layout_marginBottom="10dp">
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/trumpCard"
            android:src="@drawable/cardback" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hand"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:weightSum="10">
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card1"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card2"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card3"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card4"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card5"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card6"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card7"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card8"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card9"
            android:src="@drawable/cardback"/>
        <ImageView
            style="@style/CardDimen"
            android:id="@+id/card10"
            android:src="@drawable/cardback"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/hand"
        android:layout_marginBottom="10dp"
        android:id="@+id/playingArea">
    </LinearLayout>
</RelativeLayout>
